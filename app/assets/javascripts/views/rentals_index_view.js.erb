LionsShare.Views.RentalsIndexView = Backbone.CompositeView.extend({
  template: JST['listings/rentals_index'],

  initialize: function (options) {
    var view = this;
    view.listings = new LionsShare.Collections.Listings();
    view.num_results = 0
    view.rentals = new LionsShare.Collections.Listings();
    view.listings.fetch({
      success: function () {
        var list = view.listings.first().attributes.listings;
        list.forEach(function (listing) {
          if (listing.type_of == "Rental") {
            view.addListingSubview(listing);
            view.num_results += 1;
            view.rentals.add(listing);
          }
        });
        view.render();
      }
    });
    this.listenTo(this.listings, "sync", this.render);
    // this.listenTo(this.listings, "add", this.addListingSubview);
  },

  addListingSubview: function (listing) {
    // var listing = this.listings.getOrFetch(model.id, { parse: true });
    var subView = new LionsShare.Views.ListingSubview({
      model: listing,
      parentView: this
    });

    this.addSubview('.matches-wrapper', subView);
  },

  render: function () {
    var content = this.template({
      listings: this.listings,
      num_results: this.num_results
    });

    this.$el.html(content);
    var map_options = {
      // Initial LatLng set for Brooklyn
      center: new google.maps.LatLng(40.650002, -73.949997),
      zoom: 12,
      mapTypeId: google.maps.MapTypeId.ROADMAP
    };

    var map = new google.maps.Map(document.getElementById("map-canvas"), map_options);
    var map_pin_img = "<%= asset_path('map-pin-unselected.svg') %>";
    var pinIcon = new google.maps.MarkerImage(
      map_pin_img,
      null,
      null,
      null,
      new google.maps.Size(30, 40)
    );

    this.rentals.each(function (listing) {
      var LatLng = {lat: listing.attributes.latitude,
                    lng: listing.attributes.longitude};

      var marker = new google.maps.Marker({
        position: LatLng,
        map: map,
        id: 1,
        icon: pinIcon
      });
    });

    this.attachSubviews();
    return this;
  }
});
