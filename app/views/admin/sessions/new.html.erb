<form class="sign-in-form" action="<%= admin_session_url %>" method="post">
  <%= auth_token %>
  <input class="sign-in-field" type="text" name="user[username]" placeholder="username">
  <br>
  <input class="sign-in-field" type="password" name="user[password]" placeholder="password">
  <br>
  <input class="sign-in-button" type="submit" value="Sign in">
</form>
<div class="errors"><%= render "shared/errors" %></div>
