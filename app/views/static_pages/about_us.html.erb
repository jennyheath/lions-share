    <div class="about-contact-info">115 South Oxford St</div>
    <div class="about-contact-info">Brooklyn, New York 11217</div>
    <div class="about-subheader">Career Opportunities</div>
    <div class="about-contact-info about-email">lionshareinc@gmail.com</div>
  </div>
</div>

<script>
  dropdownListener = function () {
    $('.email-dropdown').on('click', function () {
      if ($('.email-menu').hasClass('open')) {
        $('.email-menu').removeClass('open');
        $('.about-caret').removeClass('about-caret-reversed');
      } else {
        $('.email-menu').addClass('open');
        $('.about-caret').addClass('about-caret-reversed');
      }
    });
  }

  changeTitleListener = function () {
    $('.subject-item').on('click', function (event) {
      event.stopPropagation();
      var subject = $(event.target).text();
      $('.about-subject').val(subject);

      var clone = $('.email-dropdown').clone();
      var children = clone.children().remove();
      clone.text(subject);
      clone.append(children);
      $('.email-dropdown').replaceWith(clone);

      $('.email-menu').removeClass('open');
      $('.about-caret').removeClass('about-caret-reversed');
      dropdownListener();
      changeTitleListener();
    });
  }

  dropdownListener();
  changeTitleListener();
</script>
